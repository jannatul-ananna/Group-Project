<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="75px"
    android:layout_marginLeft="25px"
    android:layout_marginRight="25px"
    tools:ignore="ExtraText"
    tools:context=".TableViewActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Table Layout"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:fontFamily="sans-serif-condensed-medium"/>


    <TableRow
        android:background="@color/light_blue"
        android:layout_marginTop="50px">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/col1"
            android:textColor="@android:color/black"
            android:padding="10sp"
            android:textSize="16sp"
            android:layout_weight="4"
            android:gravity="center_horizontal"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/col2"
            android:textColor="@android:color/black"
            android:padding="10sp"
            android:textSize="16sp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            />


    </TableRow>

    <!-- Table Data -->

    <TableRow>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/row1Name"
            android:textColor="@color/black_alloy"
            android:padding="10sp"
            android:textSize="12sp"
            android:layout_weight="4"
            android:gravity="center_horizontal"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/row1Roll"
            android:textColor="@color/black_alloy"
            android:padding="10sp"
            android:textSize="12sp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            />


    </TableRow>
    <TableRow>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/row2Name"
            android:textColor="@color/black_alloy"
            android:padding="10sp"
            android:textSize="12sp"
            android:layout_weight="4"
            android:gravity="center_horizontal"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/row2Roll"
            android:textColor="@color/black_alloy"
            android:padding="10sp"
            android:textSize="12sp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            />


    </TableRow>
    <TableRow>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/row3Name"
            android:textColor="@color/black_alloy"
            android:padding="10sp"
            android:textSize="12sp"
            android:layout_weight="4"
            android:gravity="center_horizontal"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/row3Roll"
            android:textColor="@color/black_alloy"
            android:padding="10sp"
            android:textSize="12sp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            />


    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/row4Name"
            android:textColor="@color/black_alloy"
            android:padding="10sp"
            android:textSize="12sp"
            android:layout_weight="4"
            android:gravity="center_horizontal"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/row4Roll"
            android:textColor="@color/black_alloy"
            android:padding="10sp"
            android:textSize="12sp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            />


    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/row5Name"
            android:textColor="@color/black_alloy"
            android:padding="10sp"
            android:textSize="12sp"
            android:layout_weight="4"
            android:textAlignment="center"
            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/row5Roll"
            android:textColor="@color/black_alloy"
            android:padding="10sp"
            android:textSize="12sp"
            android:layout_weight="2"
            android:gravity="center_horizontal"
            />

    </TableRow>

    <TableRow>
        <Button
            android:id="@+id/button_table_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/table_button_back"
            android:textAllCaps="false"
            android:layout_marginTop="800px"
            android:layout_marginLeft="150px"
            android:backgroundTint="@color/light_blue"
            android:textColor="@color/black"
            />

        <Button
            android:id="@+id/button_table_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/table_button"
            android:textAllCaps="false"
            android:layout_marginTop="800px"
            android:layout_marginLeft="260px"
            android:backgroundTint="@color/light_blue"
            android:textColor="@color/black"
            />
    </TableRow>

</TableLayout>